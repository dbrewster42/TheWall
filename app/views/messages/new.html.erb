<h1>Sign In</h1>
<% if flash[:alert] %>
	<% flash[:alert].each do |error| %>
	<p>	<%= error %> </p>
	<% end %>
<% end %>
<form action='/users' method='post'>
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<input type="text" name="user[name]">
	<input type="submit" value="Sign In">
</form>